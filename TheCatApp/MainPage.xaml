<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TheCatApp"
             x:Class="TheCatApp.MainPage">

    <CollectionView ItemsSource="{Binding parsedResponse}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <StackLayout Orientation="Vertical">

                        <!-- Common Title -->
                        <Label Text="{Binding name}" FontAttributes="Bold" FontSize="18" />

                        <!-- Common Description -->
                        <Label Text="{Binding origin}" FontSize="14" TextColor="Gray" />

                        <!-- Optional: Display SourceType -->
                        <Label Text="{Binding id}" FontSize="12" TextColor="LightGray" />

                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
